<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B3E5FC"
    android:layout_margin="7.5dp"
    android:padding="10dp">

    <LinearLayout android:id="@+id/leftLayoutContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView android:id="@+id/lineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:textStyle="bold"
            android:text=" time line yay this  time line kinda cool"/>

        <LinearLayout android:id="@+id/postDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/authorTextView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textStyle="italic"
                android:text="billybob99"/>

            <TextView android:id="@+id/commentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments:"
                android:paddingLeft="60dp"
                android:textStyle="italic"/>

            <TextView android:id="@+id/numCommentsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"/>

        </LinearLayout>

    </LinearLayout>

    <RadioGroup android:id="@+id/likeRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <RadioButton android:id="@+id/likeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_marginBottom="10dp"
            android:background="@drawable/like"/>

        <TextView android:id="@+id/numLikesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="22sp"
            android:layout_gravity="center"/>

        <RadioButton android:id="@+id/dislikeRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/dislike"
            android:layout_marginTop="10dp"/>
    </RadioGroup>
</LinearLayout>